@model IEnumerable<Arbbet.Domain.Entities.Competition>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnifiedEntity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnifiedType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnifiedEntity.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnifiedType)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
