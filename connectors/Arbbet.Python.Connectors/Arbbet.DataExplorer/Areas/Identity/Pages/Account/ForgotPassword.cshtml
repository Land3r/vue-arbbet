@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12 pa-0">
            <div class="auth-form-wrap auth-cover-img pt-xl-0 pt-70" style="background-image:url(/img/landing/landing1.jpg);">
                <div class="auth-form w-xl-30 w-lg-65 w-sm-85 w-100 card pa-25 shadow-lg">
                    <a class="auth-brand text-center d-block mb-20" href="#">
                        <img class="brand-img" src="@Url.Content("~/img/logos/arbbet_logo_128.png")" alt="arbbet" />
                    </a>
                    <form id="account" method="post">
                        <h1 class="display-5 mb-10 text-center">@ViewData["Title"]</h1>
                        <p class="mb-30 text-center">We will send new code to your <u>recovery email</u> to reset your password.</p>
                        <div class="form-group">
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="@Html.DisplayNameFor(model => model.Input.Email)" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <button class="btn btn-success btn-block mb-20" type="submit">Send</button>
                        @if (Model.ResendActivationEnabled)
                        {
                            <p class="text-center mb-20">
                                Having trouble activating account ?
                                <a asp-page="./ResendEmailConfirmation">Resend activation email</a>
                            </p>
                        }
                        <p class="text-right"><a asp-page="Login">Back to login</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
