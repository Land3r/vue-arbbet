    </ItemGroup>
    <Copy SourceFiles="@(fonts)" DestinationFolder="$(ProjectDir)\wwwroot\fonts" SkipUnchangedFiles="true" />
    <!--<Copy SourceFiles="@(webfonts)" DestinationFolder="$(ProjectDir)\wwwroot\webfonts" SkipUnchangedFiles="true" />-->
